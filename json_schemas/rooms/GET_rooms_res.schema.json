{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "GET api/v1/rooms RESPONSE",
  "description": "JSON document listing rooms",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "id": {
        "description": "Id of the room",
        "type": "string",
        "format": "uuid"
      },
      "name": { "description": "Name of the room", "type": "string" },
      "number": {
        "description": "Number of the room",
        "type": ["string", "null"],
        "maxLength": 16
      },
      "buildingId": {
        "description": "Id of the building in which the room is located",
        "type": "string",
        "format": "uuid"
      }
    },
    "required": ["id", "name", "number", "buildingId"],
    "additionalProperties": false
  }
}
